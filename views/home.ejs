<link rel="stylesheet" href="/css/home_layout.css" />
<h1>Codeial / <%=title%></h1>
<section class="feed-post">
  <h3>Posts</h3>
  <form action="/posts/create-post" method="post" id="new-post-form">
    <textarea
      name="content"
      id="Content-area"
      cols="30"
      rows="2"
      placeholder="Type Here ..........."
    ></textarea>
    <button type="submit" id="btn-post">Post</button>
  </form>

  <div class="posts-container">
    <ul>
      <% for(post of posts) { %>
      <li>
        <%= post.content%>
        <br />
        <%= post.user.name %>
      </li>
      <% } %>
    </ul>
  </div>
</section>
<script type="text/javascript" src="/js/home_layout.js"></script>
