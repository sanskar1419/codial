<header>
  <div class="website-name-container">
    <h1>Codial</h1>
  </div>

  <div class="ul-container">
    <ul>
      <!-- Using locals.user instead of user property can be null variable can't be nill -->
      <% if(locals.user) { %>
      <li>
        <a href="/users/profile/<%= user.id %>" id="User-name"
          ><%= user.name %></a
        >
      </li>
      <li>
        <a href="/users/sign-out"><button>Sign Out</button></a>
        <br />
      </li>
      <% } else { %>
      <li>
        <a href="/users/sign-in"><button>Sign In</button></a>
        <br />
      </li>
      <li>
        <a href="/users/sign-up"><button>Sign Up</button></a>
        <br />
      </li>
      <% } %>
    </ul>
  </div>
</header>
